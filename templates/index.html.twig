{% extends 'base.html.twig' %}
{% block title %}
To Do List
{% endblock %}
{% block body %}
  <div class="header">
    <h2>To Do List</h2>
    <form method="POST" action="{{path('create_task')}}">
      <input name="title" type="text" id="myInput" placeholder="Task title..." />
      <button type="submit" class="addBtn">Add a task</button>
    </form>
    <form method="POST" name="selector">
      <select name="sort" class="sorter" onChange=alertVarchange()>
          <option value="id">ID</option>
          <option value="status">Status</option>
          <option value="title">Title</option>
      </select>
    </form>
  </div>
  <ul>
{% for task in tasks %}
    <li {% if task.status%}class="checked"{% endif %}>
        <a href="{{path('switch_status',{'id':task.id})}}">
          <span class="task-list-item">{{task.title}}</span>
        </a>
        <a onclick="return confirm('Are you sure?')" href="{{path('task_delete',{'id':task.id})}}">
            <span class="close">X</span>
        </a>
    </li>
{% endfor %}
  </ul>
{% endblock %}

{% block javascripts %}
<script>
function alertVarchange() {
  var a = document.getElementById("sort");
  alert(a.options[a.selectedIndex].value);
}
</script>
{% endblock %}


